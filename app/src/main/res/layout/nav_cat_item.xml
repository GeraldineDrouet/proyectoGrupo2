<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b07e69"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerInside"
            android:src="@drawable/ic_category"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cat_nav_img"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_cat_nombre"
                android:text="Nombre Categoría"
                android:fontFamily="@font/alice"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_cat_descripcion"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Descripción"
                android:fontFamily="@font/alice"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descuento:"
                android:textSize="20sp"
                android:fontFamily="@font/alice"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_cat_descuento"
                android:text="20% OFF"
                android:textSize="22sp"
                android:fontFamily="@font/alice"
                android:textStyle="bold"
                android:textColor="#4b230f" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flecha"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>